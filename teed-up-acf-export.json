[
    {
        "key": "group_round_details",
        "title": "Round Details",
        "fields": [
            {
                "key": "field_round_course",
                "label": "Course",
                "name": "course",
                "type": "post_object",
                "required": 1,
                "post_type": [
                    "course"
                ],
                "return_format": "object",
                "ui": 1
            },
            {
                "key": "field_round_date",
                "label": "Date",
                "name": "date",
                "type": "date_picker",
                "required": 1,
                "display_format": "d/m/Y",
                "return_format": "Y-m-d",
                "first_day": 1
            },
            {
                "key": "field_round_score",
                "label": "Score",
                "name": "score",
                "type": "number",
                "required": 1,
                "min": 1,
                "step": 1
            },
            {
                "key": "field_round_holes_played",
                "label": "Holes Played",
                "name": "holes_played",
                "type": "number",
                "required": 1,
                "default_value": 18,
                "min": 1,
                "max": 18,
                "step": 1
            },
            {
                "key": "field_round_hole_scores",
                "label": "Hole Scores",
                "name": "hole_scores",
                "type": "text",
                "instructions": "JSON array of scores (e.g., [4,5,3...])"
            }
        ],
        "location": [
            [
                {
                    "param": "post_type",
                    "operator": "==",
                    "value": "round"
                }
            ],
            [
                {
                    "param": "post_type",
                    "operator": "==",
                    "value": "practice_session"
                }
            ]
        ],
        "active": true
    },
    {
        "key": "group_course_details",
        "title": "Course Details",
        "fields": [
            {
                "key": "field_course_location",
                "label": "Location",
                "name": "location",
                "type": "text",
                "required": 1
            },
            {
                "key": "field_course_par",
                "label": "Par",
                "name": "par",
                "type": "number",
                "required": 1,
                "default_value": 72
            },
            {
                "key": "field_course_rating_num",
                "label": "Rating",
                "name": "rating",
                "type": "number",
                "required": 1,
                "default_value": 72.0,
                "step": "0.1"
            },
            {
                "key": "field_course_slope_num",
                "label": "Slope",
                "name": "slope",
                "type": "number",
                "required": 1,
                "default_value": 113
            },
            {
                "key": "field_course_holes_count",
                "label": "Holes",
                "name": "holes",
                "type": "number",
                "required": 1,
                "default_value": 18
            },
            {
                "key": "field_course_booking_url",
                "label": "Booking URL",
                "name": "booking_url",
                "type": "url"
            },
            {
                "key": "field_course_ext_image",
                "label": "External Image URL",
                "name": "external_image_url",
                "type": "url"
            },
            {
                "key": "field_course_img_source",
                "label": "Image Source URL",
                "name": "image_source_url",
                "type": "url"
            },
            {
                "key": "field_course_pars_per_hole",
                "label": "Pars Per Hole",
                "name": "pars_per_hole",
                "type": "repeater",
                "sub_fields": [
                    {
                        "key": "field_hole_par",
                        "label": "Par",
                        "name": "par",
                        "type": "number",
                        "required": 1,
                        "default_value": 4
                    }
                ],
                "layout": "table"
            }
        ],
        "location": [
            [
                {
                    "param": "post_type",
                    "operator": "==",
                    "value": "course"
                }
            ]
        ],
        "active": true
    },
    {
        "key": "group_user_stats",
        "title": "User Profile Fields",
        "fields": [
            {
                "key": "field_user_handicap",
                "label": "Current Handicap",
                "name": "current_handicap",
                "type": "number",
                "step": "0.1"
            },
            {
                "key": "field_user_handicap_trend",
                "label": "Handicap Trend",
                "name": "handicap_trend",
                "type": "select",
                "choices": {
                    "stable": "Stable",
                    "up": "Trending Up",
                    "down": "Trending Down"
                },
                "default_value": "stable"
            },
            {
                "key": "field_user_schedule",
                "label": "Weekly Schedule",
                "name": "weekly_schedule",
                "type": "repeater",
                "sub_fields": [
                    {
                        "key": "field_slot_day",
                        "label": "Day",
                        "name": "day",
                        "type": "select",
                        "choices": {
                            "Mon": "Monday",
                            "Tue": "Tuesday",
                            "Wed": "Wednesday",
                            "Thu": "Thursday",
                            "Fri": "Friday",
                            "Sat": "Saturday",
                            "Sun": "Sunday"
                        }
                    },
                    {
                        "key": "field_slot_start",
                        "label": "Start Time",
                        "name": "start_time",
                        "type": "time_picker",
                        "display_format": "H:i",
                        "return_format": "H:i"
                    },
                    {
                        "key": "field_slot_end",
                        "label": "End Time",
                        "name": "end_time",
                        "type": "time_picker",
                        "display_format": "H:i",
                        "return_format": "H:i"
                    }
                ],
                "layout": "table"
            }
        ],
        "location": [
            [
                {
                    "param": "user_role",
                    "operator": "==",
                    "value": "all"
                }
            ]
        ],
        "active": true
    }
]